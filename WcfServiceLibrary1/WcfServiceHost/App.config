<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.serviceModel>
    <services>
      <!-- ИМЯ СЕРВИСА ДОЛЖНО СОВПАДАТЬ С ТВОИМ namespace + классом -->
      <service name="WcfServiceLibrary1.Service1"
               behaviorConfiguration="Service1Behavior">

        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8733/Design_Time_Addresses/KT1/Service1/" />
          </baseAddresses>
        </host>

        <!-- Основной сервисный endpoint -->
        <endpoint address=""
                  binding="basicHttpBinding"
                  contract="WcfServiceLibrary1.IService1" />

        <!-- Метаданные (mex) -->
        <endpoint address="mex"
                  binding="mexHttpBinding"
                  contract="IMetadataExchange" />

      </service>
    </services>

    <!-- Поведение сервиса -->
    <behaviors>
      <serviceBehaviors>
        <behavior name="Service1Behavior">
          <!-- Включаем публикацию метаданных -->
          <serviceMetadata httpGetEnabled="true" />

          <!-- Чтобы видеть полные ошибки при отладке -->
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>

  </system.serviceModel>

  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="SQLitePCLRaw.core" publicKeyToken="1488e028ca7ab535" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-2.1.11.2622" newVersion="2.1.11.2622" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
